<main role="main">
  <section id="hero">
      <!--<div class="hero-background">     
        <img alt="Imagem de Capa. Contém Gato e cachorro deitados." class="d-none d-sm-block" src="" />
                
        <img alt="Imagem de Capa. Contém Gato e cachorro deitados." class="d-block d-sm-none" src="" />
      </div>-->

      <svg class="wave" height="124" viewBox="0 0 1600 124" width="1600" xmlns="http://www.w3.org/2000/svg">
        <path d="M1600 0v124H0V0c266.667 80 533.333 120 800 120 266.667 0 533.333-40 800-120z" fill="#FFF">
        </path>
      </svg>
      <div class="container">
        <div class="row">
          <div class="col-12">
            <header class="hero-header text-center mx-auto w-75 w-sm-75">

              <h1 class="text-uppercase">Agende serviços para seu pet em mais de 300 lojas.</h1>
              <h2 class="lead">Encontre Pet Shops e Clínicas. Agende online!</h2>

            </header>
            <div class="hero-search pb-6">
              <div class="mx-0 mx-md-6" id="main-search">

                <form name="search" action="/busca" accept-charset="UTF-8" method="get">

                  <input name="utf8" type="hidden" value="&#x2713;" />

                  <div class="row">
                    <div class="col-12 col-md-6 col-lg-5">
                      <div class="input-group">
                        <span class="input-group-addon"><svg class="dropdown-icon" height="24" width="24"><use xlink:href="#icon-search-form-category"></use></svg></span>

                        <input class="w-100 pl-0" id="key" name="q" placeholder="Busque um serviço ou estabelecimento" type="text" />
                      </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mt-3 mt-md-0">

                      <div class="input-group">
                        <span class="input-group-addon">

                          <svg class="dropdown-icon" height="24" width="24">

                            <use xlink:href="#icon-search-form-pin"></use>

                          </svg>
                        </span>

                        <select class="city choices w-100" name="location">

                          <optgroup label="AM">
                            <option value="manaus">Manaus</option>
                          </optgroup>

                          <optgroup label="BA">
                            <option value="salvador">Salvador</option>
                          </optgroup>

                          <optgroup label="DF">
                            <option value="brasilia">Brasília</option>
                          </optgroup>

                          <optgroup label="ES">
                            <option value="vila-velha">Vila Velha</option>
                          </optgroup>

                          <optgroup label="GO">
                            <option value="goiania">Goiânia</option>
                          </optgroup>

                          <optgroup label="MG">
                            <option value="belo-horizonte">Belo Horizonte</option>
                            <option value="juiz-de-fora">Juiz de Fora</option><option value="pouso-alegre">Pouso Alegre</option>
                          </optgroup>

                          <optgroup label="MS">
                            <option value="campo-grande">Campo Grande</option>
                          </optgroup>

                          <optgroup label="PE">
                            <option value="salgueiro">Salgueiro</option>
                          </optgroup>

                          <optgroup label="PR">
                            <option value="curitiba">Curitiba</option>
                            <option value="maringa">Maringá</option>
                            <option value="sao-jose-dos-pinhais">São José dos Pinhais</option>
                          </optgroup>

                          <optgroup label="RJ">
                            <option value="rio-de-janeiro">Rio de Janeiro</option>
                          </optgroup>

                          <optgroup label="RS">
                            <option value="porto-alegre">Porto Alegre</option>
                          </optgroup>

                          <optgroup label="SC">
                            <option value="balneario-camboriu">Balneário Camboriú</option>
                            <option value="garopaba">Garopaba</option>
                            <option value="itajai">Itajaí</option>
                          </optgroup>

                          <optgroup label="SP">
                            <option value="araras">Araras</option>
                            <option value="atibaia">Atibaia</option>
                            <option value="barueri">Barueri</option>
                            <option value="bertioga">Bertioga</option>
                            <option value="botucatu">Botucatu</option>
                            <option value="campinas">Campinas</option>
                            <option value="carapicuiba">Carapicuíba</option><option value="catanduva">Catanduva</option>
                            <option value="cotia">Cotia</option>
                            <option value="guarulhos">Guarulhos</option>
                            <option value="indaiatuba">Indaiatuba</option><option value="itanhaem">Itanhaém</option>
                            <option value="itapetininga">Itapetininga</option><option value="jundiai">Jundiaí</option>
                            <option value="limeira">Limeira</option>
                            <option value="mairinque">Mairinque</option>
                            <option value="mairipora">Mairiporã</option>
                            <option value="marilia">Marília</option>
                            <option value="osasco">Osasco</option>
                            <option value="pindamonhangaba">Pindamonhangaba</option>
                            <option value="pirassununga">Pirassununga</option>
                            <option value="santa-barbara-d-oeste">Santa Bárbara d&#39;Oeste</option>
                            <option value="santana-de-parnaiba">Santana de Parnaíba</option><option value="santo-andre">Santo André</option>
                            <option value="sao-caetano-do-sul">São Caetano do Sul</option><option value="sao-jose-do-rio-preto">São José do Rio Preto</option>
                            <option value="sao-jose-dos-campos">São José dos Campos</option><option selected="selected" value="sao-paulo">São Paulo</option><option value="sao-roque">São Roque</option>
                            <option value="sorocaba">Sorocaba</option>
                            <option value="taubate">Taubaté</option>
                            <option value="tremembe">Tremembé</option>
                          </optgroup>

                        </select>
                      </div>
                    </div>

                    <div class="col mt-3 mt-lg-0">
                      <button class="btn btn-primary d-flex align-items-center justify-content-center text-center d-block-sm" id="searchList">
                       <div class="mr-3"><%= image_tag("ico-search_white1.png") %></div><span>BUSCAR</span>
                     </button>
                   </div>
                 </div>
               </form>
             </div>
           </div>
         </div>
        </div>
      </div>
  </section>

  <section class="pb-7" id="download">
    <div class="container">

      <div class="row align-items-md-center">
        <div class="col-md-12 col-lg-6">
          <header>
            <h1 class="h1 text-uppercase">Baixe o app do Ipet</h1>

            <p class="lead opacity-6">Encontre e agende nos melhores Pet Shops, Clínicas Veterinárias, Hotéis, Adestradores, Passeadores, a qualquer hora e lugar, em poucos segundos!</p>

          </header>
        </div>

        <div class="col-4 col-md-6 col-lg-3">
          <div class="composition-image">
            <%=image_tag  'phone.png', class: 'img-fluid' %>
          </div>
        </div>

        <div class="col-8 col-md-6 col-lg-3">
          <div class="store-buttons d-flex flex-column text-right">

            <a class="mb-3" target="_blank" href="#">
              <div class="mx-auto"><%= image_tag("apple-store.png") %></div>
            </a>

            <a class="mb-3" target="_blank" href="#"><div class="mx-auto"><%= image_tag("google-play.png") %></div></a>

          </div>
        </div>
      </div>
    </div>
  </section>
 
  <section id="latest-properties" class="py-5 py-sm-6 py-md-7 py-lg-7">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <header class="text-center text-white pb-5">
            <h1 class="h1 text-uppercase"> Encontre</h1>
            <p class="lead opacity-6">Pet shops, clínicas veterinárias e outros estabelecimentos próximos de você e seu pet:</p>
          </header>
        </div>
        <%= render "properties/latest_properties", properties: @properties %>         
      </div>
    </div>
  </section>

  <section id="latest-properties1" class="py-5 py-sm-6 py-md-7 py-lg-7">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <header class="text-center text-white pb-5">
            <h1 class="h1 text-uppercase"> Promoções</h1>
            <p class="lead opacity-6">Confira as promoções em estabelimentos mas de você e seu pet:</p>
          </header>
        </div>
        <%#= render "properties/latest_properties", properties: @properties %>         
      </div>
    </div>
  </section>

</main>