<section class="form-auth text-center marginlogin">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
    <%= link_to image_tag("logo-menu.png"), root_path %>
    <h1 class="h3 mb-3 font-weight-normal">Faça seu login:</h1>
    
    <label for="inputEmail" class="sr-only">Email</label>
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Digite seu Email", autocomplete: "email" %>
    
    <label for="inputPassword" class="sr-only">Senha</label>
    <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Digite sua Senha", autocomplete: "current-password" %>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Lembrar me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ENTRAR</button>
    
    <p class="mt-5 mb-3 text-muted">© 2019</p>
  <% end %>

<%= render "devise/shared/links" %>
</section>