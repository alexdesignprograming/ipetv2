<% properties.each do |property| %>

	<div class="col-4 mb-5">
		<div class="property bg-white border">
			<%= link_to property_path(property) do %>

				<div class="property-thumb" style="background-image: url(<%= property_thumbnail_url(property) %>)">
				</div>

				<div class="property-summary p-3">
					<h3 class="h5"><%= link_to property.name, property_path(property) %></h3>
					<p class="mt-2 business-location "><i class ="mr-2" width="12" data-feather="map-pin"></i><%= property.address %></p>
				</div>

			<% end %>
		</div>
	</div>

<% end %>