<div class="property-main-photo" style="background-image:url('<%= property_photo_url @property %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        
        <div class="col-sm-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2"><%= @property.name %></p>
        </div>
      

        <div class="col-md-6 text-center">
            <div class="row mr-md-3 bg-light p-3">
              <div class="mr-5 ml-5">
                <%= link_to image_tag("instagram.png"), "http://www.youtube.com", target: "_black"%>
              </div>

              <div class="mr-5">
                <%= link_to image_tag("facebook.png"), "http://www.facebook.com", target: "_black" %>
              </div>

              <div class="m-0">
                <%= link_to image_tag("youtube.png"), "http://www.youtube.com", target: "_black" %>
              </div>
           </div>
        </div>
        <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
          <div class="col-6">
            Breve ...
          </div>
        </div>

      </div>
      <div class="row">
        <div class="col">
            <p class="h3">Sobre a Loja</p>
            <p class="h5"><%= @property.name %></p>

            <div id="prop-details">
              <p><%= simple_format @property.details %></p>
            </div>

            <button class="btn btn-outline-info mt-3" id="toggleDetails">Ver mais</button>
        </div>
      </div>
  
    </div>
     <div class="col-sm-4">
        <%= render "layouts/agent_details" %>
      </div>
  </div>
  <div class="row">
    
  </div>
</div>

